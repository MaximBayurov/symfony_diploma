{% extends 'base.html.twig' %}

{% block body %}

    <div class="d-flex" id="wrapper">

        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">BlaBlaArticle</div>
            <div class="list-group list-group-flush" data-controller="dashboardMenuList">
                <a href="{{ path('app_dashboard') }}" class="list-group-item list-group-item-action bg-light">
                    Рабочий стол
                </a>
                <a href="{{ path('app_dashboard_article_create') }}" class="list-group-item list-group-item-action bg-light">
                    Создать статью
                </a>
                <a href="{{ path('app_dashboard_history') }}" class="list-group-item list-group-item-action bg-light">
                    История статей
                </a>
                <a href="{{ path('app_dashboard_subscription') }}"
                   class="list-group-item list-group-item-action bg-light">
                    Подписка
                </a>
                <a href="{{ path('app_dashboard_profile') }}" class="list-group-item list-group-item-action bg-light">
                    Профиль
                </a>
                {% if (is_granted('SUBSCRIPTION_PRO')) %}
                    <a href="{{ path('app_dashboard_modules') }}"
                       class="list-group-item list-group-item-action bg-light">
                        Модули генератора
                    </a>
                {% endif %}
            </div>
        </div>

        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Скрыть меню</button>

                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Показать/Скрыть навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('app_logout') }}">Выйти</a>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid">
                {% block content %}
                {% endblock %}
            </div>
        </div>
    </div>

{% endblock %}